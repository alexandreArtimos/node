<html>
  <body>
    <div class='erros'>
      <% if(errosValidacao) { %>
         <ul>
             <% for(var i=0; i < errosValidacao.length; i++) {%>
                 <li>
                     <%= errosValidacao[i].param %> - <%= errosValidacao[i].msg %>
                 </li>
             <%}%>
         </ul>
     <%}%>
    </div>
      <form action="/produtos" method="post">
        <div>
          <label for="titulo">Título</label>
          <input id="titulo" type="text" name="titulo" value="<%=produto.titulo%>" placeholder="Titulo"/>
        </div>
        <div>
          <label for="preco">Preço</label>
          <input id="preco" type="text" name="preco" value="<%=produto.preco%>" placeholder="Preço" />
        </div>
        <div>
            <label for="descricao">Descrição</label>
            <textarea cols="20" rows="10" id="descricao" value="<%=produto.descricao%>" name="descricao" placeholder="Fale sobre o livro"></textarea>
        </div>
        <input type="submit" value="Gravar" />
      </form>
  </body>
</html>
